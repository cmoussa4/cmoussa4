using System;
using System.Collections.Generic;

namespace revision
{
    class Program
    {

        static void Main(string[] args)
        {

            Random random = new Random();
            int decision;
            int playerhealth = 30;
            int playerattack = 5;
            int playerheal = 2;
            int enemyhealth = 25;
            int enemyattack = 7;
            int enemyheal = 2;
            Console.WriteLine("Welcome to gladiator Battle, slay your enemy in this turn based combat game!\npress [1] to attack or [2] to heal");
            while(playerhealth > 0 && enemyhealth > 0)
            {
                decision = int.Parse(Console.ReadLine());
                if(decision == 1)
                {
                    Console.WriteLine("you choose to attack!");
                    enemyhealth -= playerattack;
                    Console.WriteLine("Player Health: " + playerhealth + " Enemy Health: " + enemyhealth + "\n----------------");
                }
                else if(decision == 2)
                {
                    Console.WriteLine("you choose to heal!");
                    playerhealth += playerheal;
                    Console.WriteLine("Player Health: " + playerhealth + " Enemy Health: " + enemyhealth + "\n----------------");
                }
                else
                {
                    Console.WriteLine("Error");
                    Console.WriteLine("Player Health: " + playerhealth + " Enemy Health: " + enemyhealth + "\n----------------");
                }
                
                int enemydecision = random.Next(1, 3);
                if(enemyhealth > 0)
                {
                    if (enemydecision == 1)
                    {
                        Console.WriteLine("Enemy chooses to attack!");
                        playerhealth -= enemyattack;
                        Console.WriteLine("Player Health: " + playerhealth + " Enemy Health: " + enemyhealth + "\n----------------");
                    }
                    else if (enemydecision == 2)
                    {
                        Console.WriteLine("enemy chooses to heal!");
                        enemyhealth += enemyheal;
                        Console.WriteLine("Player Health: " + playerhealth + " Enemy Health: " + enemyhealth + "\n----------------");
                    }
                }
                

            }
            if(playerhealth > 0)
            {
                Console.WriteLine("you slayed your opponent!");
            }
            else if (enemyhealth > 0)
            {
                Console.WriteLine("you have been slain...");
            }

            Console.WriteLine("Thanks for playing!");

        }
    }
}
